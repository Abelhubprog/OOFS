# Production environment variables for OOF Backend
# This file contains production-ready configurations
# Make sure to replace sensitive values with actual production credentials

# Database Configuration
DATABASE_URL=postgresql://oof_user:CHANGE_THIS_PASSWORD@postgres:5432/oof_backend

# Redis Configuration
REDIS_URL=redis://redis:6379

# Object Storage Configuration (S3 or S3-compatible)
ASSET_BUCKET=s3://oof-assets-prod
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
# AWS_ENDPOINT_URL=  # Remove for real AWS S3

# API Service Configuration
API_BIND=0.0.0.0:8080
CDN_BASE=https://cdn.oof.example.com
CORS_ALLOW_ORIGIN=https://app.oof.example.com

# Indexer Service Configuration
INDEXER_BIND=0.0.0.0:8081

# Authentication Configuration
JWKS_URL=https://auth.dynamic.xyz/.well-known/jwks
JWT_ISSUER=https://auth.dynamic.xyz
JWT_AUDIENCE=oof-backend-prod

# Rate Limiting (more restrictive for production)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Solana RPC Configuration (use dedicated RPC endpoints for production)
RPC_PRIMARY=https://your-dedicated-rpc-endpoint.com
RPC_BACKUP=https://api.mainnet-beta.solana.com

# Jupiter API Configuration
JUPITER_BASE_URL=https://price.jup.ag/v3

# Helius Webhook Configuration
HELIUS_WEBHOOK_SECRET=your_production_helius_webhook_secret

# Worker Configuration
WORKER_CONCURRENCY=8
BACKFILL_BATCH_SIZE=2000

# Logging Configuration (less verbose for production)
RUST_LOG=info,oof_backend=info

# Security Settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Performance Settings
MAX_CONNECTIONS=100
POOL_TIMEOUT=30
IDLE_TIMEOUT=600

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true

# ðŸš€ OOF Platform Environment Configuration

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://username:password@localhost:5432/oof_platform

# ===================================
# AUTHENTICATION (Dynamic.xyz)
# ===================================
# Get these from https://app.dynamic.xyz/dashboard
VITE_DYNAMIC_ENVIRONMENT_ID=your_dynamic_environment_id
DYNAMIC_API_KEY=your_dynamic_api_key
DYNAMIC_JWKS_URL=https://app.dynamic.xyz/api/v0/sdk/your_environment_id/.well-known/jwks

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here

# ===================================
# BLOCKCHAIN CONFIGURATION
# ===================================
# Solana RPC endpoints
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_API_KEY=your_helius_api_key
BIRDEYE_API_KEY=your_birdeye_api_key

# Jupiter API for swaps
JUPITER_API_URL=https://quote-api.jup.ag/v6

# ===================================
# AI SERVICES
# ===================================
# OpenAI for AI analysis
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google Gemini
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key

# ===================================
# OBJECT STORAGE (Cloudflare R2)
# ===================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=oof-platform-assets
CDN_BASE_URL=https://assets.oof-platform.com

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379

# ===================================
# CROSS-CHAIN INTEGRATION
# ===================================
# Zora Network (Base L2)
ZORA_RPC_URL=https://rpc.zora.energy
ZORA_CHAIN_ID=7777777

# Base Network
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453

# ===================================
# MONITORING & OBSERVABILITY
# ===================================
# Metrics and monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ===================================
# RATE LIMITING & SECURITY
# ===================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://oof-platform.com,https://www.oof-platform.com

# ===================================
# APPLICATION CONFIGURATION
# ===================================
NODE_ENV=production
PORT=5000
VITE_API_URL=https://api.oof-platform.com

# Session configuration
SESSION_SECRET=your_session_secret_here

# ===================================
# DEPLOYMENT CONFIGURATION
# ===================================
# Railway.com specific
RAILWAY_ENVIRONMENT=production

# Health check endpoints
HEALTH_CHECK_ENABLED=true
METRICS_ENDPOINT_ENABLED=true

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_AI_ANALYSIS=true
ENABLE_CROSS_CHAIN=true
ENABLE_NFT_MINTING=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_STAKING=true

# Development flags
SKIP_DB_CHECK=false
SIMPLE_MODE=false
DEBUG_MODE=false
